# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=digital_signage
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Cloud Storage (AWS S3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=digital-signage-media
S3_CDN_URL=https://cdn.yourdomain.com

# Alternative: Azure Blob Storage
# AZURE_STORAGE_ACCOUNT=your_account
# AZURE_STORAGE_KEY=your_key
# AZURE_CONTAINER_NAME=media

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_HOST=0.0.0.0

# Microservices Ports
AUTH_SERVICE_PORT=3001
CONTENT_SERVICE_PORT=3002
TEMPLATE_SERVICE_PORT=3003
SCHEDULING_SERVICE_PORT=3004
DEVICE_SERVICE_PORT=3005

# WebSocket Configuration
WEBSOCKET_PORT=3100

# Frontend Configuration
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:3000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@digitalsignage.com

# Weather API (for weather widget)
WEATHER_API_KEY=your_openweathermap_api_key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# PowerPoint Conversion Service
PPT_CONVERTER=libreoffice
# Options: libreoffice, cloudconvert, aspose
LIBREOFFICE_PATH=/usr/bin/libreoffice
CLOUDCONVERT_API_KEY=

# Media Processing
MAX_UPLOAD_SIZE=500MB
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp
ALLOWED_VIDEO_FORMATS=mp4,webm,mov,avi
ALLOWED_DOCUMENT_FORMATS=pdf,doc,docx,ppt,pptx

# Device Heartbeat Configuration
HEARTBEAT_INTERVAL=60000
HEARTBEAT_TIMEOUT=180000
PROOF_OF_PLAY_INTERVAL=300000

# Emergency Alert (CAP Integration)
CAP_FEED_URL=https://alerts.weather.gov/cap/us.php?x=0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Environment
NODE_ENV=development
